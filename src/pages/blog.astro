---
import BaseLayout from '@layouts/BaseLayout.astro'
import { getCollection } from 'astro:content'

const post = await getCollection('posts')

const tags = post.flatMap(({ data: { tags } }) => tags)
---

<BaseLayout title='Blog'>
  <div class='container mx-auto px-4 py-12'>
    <div class='mx-auto max-w-4xl'>
      <div class='flex flex-col mb-10 items-center text-center'>
        <h1
          class='mb-4 bg-gradient-to-r from-pink-500 to-violet-500 text-transparent bg-clip-text text-4xl font-bold sm:text-5xl py-2'
        >
          The Blog
        </h1>
        <p class='max-w-2xl text-lg text-gray-300'>
          Explore our latest articles, tutorials, and insights on web
          development, design, and technology.
        </p>
      </div>
      <div class='mb-8 flex flex-wrap gap-3'>
        <button
          class='rounded-full bg-pink-500/10 px-4 py-1.5 text-sm font-medium text-pink-400'
        >
          All Posts
        </button>
        <button
          class='rounded-full bg-gray-800 px-4 py-1.5 text-sm font-medium text-gray-300 hover:bg-gray-700'
        >
          Development
        </button>
        <button
          class='rounded-full bg-gray-800 px-4 py-1.5 text-sm font-medium text-gray-300 hover:bg-gray-700'
        >
          Design
        </button>
        <button
          class='rounded-full bg-gray-800 px-4 py-1.5 text-sm font-medium text-gray-300 hover:bg-gray-700'
        >
          Technology
        </button>
      </div>
    </div>
  </div>
</BaseLayout>
