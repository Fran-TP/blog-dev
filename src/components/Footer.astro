---
import Social from '@components/Social.astro'
import Github from '@icons/Github.astro'
import X from '@icons/X.astro'

const PLATFORMS = [
  {
    name: 'GitHub',
    url: 'https://github.com',
    username: 'Fran-TP',
    icon: Github,
  },
  {
    name: 'X',
    url: 'https://x.com',
    username: '_Fran_Torres_',
    icon: X,
  },
]
---

<footer
  class='border-t-2 border-slate-500/30 bg-gradient-to-r from-gray-900 to-gray-950 p-4 bg-slate-800 text-white'
>
  <p class='flex gap-2'>
    {
      PLATFORMS.map(({ name, username, icon: Icon }) => (
        <Social platform={name} username={username}>
          <Icon class='size-5' />
        </Social>
      ))
    }
  </p>
</footer>
