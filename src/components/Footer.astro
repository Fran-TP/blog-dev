---
import Social from '@components/Social.astro'

const PLATFORMS = [
  {
    name: 'Twitter',
    url: 'https://twitter.com',
    username: 'FranTP',
  },
  {
    name: 'GitHub',
    url: 'https://github.com',
    username: 'FranTP',
  },
]
---

<footer class='p-4 bg-slate-800 text-white'>
  <p>
    {
      PLATFORMS.map(({ name, username }) => (
        <Social platform={name} username={username} />
      ))
    }
  </p>
</footer>

<style>
  footer {
    display: flex;
    gap: 1rem;
  }
</style>
